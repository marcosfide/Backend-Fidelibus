<div style="display: flex; justify-content: space-around; font-weight: 600; margin: 1.2rem; background-color: #8080808f; padding: 1rem; border-radius: 8px;">
    <style>
        a {
            color: white;
            margin: 0 15px;
            text-decoration: none;
            font-size: 18px;
            padding: 8px 16px;
            border-radius: 5px;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

        a:hover {
            background-color: #45a049;
            transform: scale(1.1);
            text-decoration: underline;
        }

        a.logout:hover {
            background-color: #e63939;
            transform: scale(1.1);
        }
    </style>
    <a href="/" style="color: #1976D2;">Inicio</a>
    <a href="/profile" style="color: #1976D2;">My Profile</a>
    <a href="/products" style="color: #1976D2;">Products</a>
    <a href="/cart" style="color: #1976D2;">Cart</a>
    <a href="/productsManager" style="color: #1976D2;">Products Manager</a>
    <a href="/usersManager" style="color: #1976D2;">Users Manager</a>
    <a href="/api/session/logout" style="color: #ff3232;">Logout</a>
</div>

<div class="products-list" style="max-width: 1200px; margin: 2rem auto; padding: 2rem; background-color: #ffffff; box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1); border-radius: 8px;">
    <h1 style="color: #1976D2; font-size: 2rem; margin-bottom: 2rem;">Listado de Usuarios</h1>
    
    <div class="card-product" style="font-size: 1rem; color: #333;">
        <table style="width: 100%; border-collapse: collapse; margin-top: 1rem;">
            <thead style="background-color: #f1f1f1;">
                <tr style="text-align: left; color: #1976D2;">
                    <th style="padding: 0.8rem; border: 1px solid #ddd;">Nombre</th>
                    <th style="padding: 0.8rem; border: 1px solid #ddd;">Apellido</th>
                    <th style="padding: 0.8rem; border: 1px solid #ddd;">Email</th>
                    <th style="padding: 0.8rem; border: 1px solid #ddd;">Rol</th>
                    <th style="padding: 0.8rem; border: 1px solid #ddd;">Última Conexión</th>
                    <th style="padding: 0.8rem; border: 1px solid #ddd;">Acción</th>
                </tr>
            </thead>
            <tbody style="font-size: 1rem; color: #555;">
                {{#each users}}
                <tr>
                    <td style="padding: 0.8rem; border: 1px solid #ddd;">{{this.firstName}}</td>
                    <td style="padding: 0.8rem; border: 1px solid #ddd;">{{this.lastName}}</td>
                    <td style="padding: 0.8rem; border: 1px solid #ddd;">{{this.email}}</td>
                    <td style="padding: 0.8rem; border: 1px solid #ddd;">{{this.rol}}</td>
                    <td style="padding: 0.8rem; border: 1px solid #ddd;">{{this.last_connection}}</td>
                    <td style="padding: 0.8rem; border: 1px solid #ddd;">
                        <form method="post" action="/api/users/{{this._id}}?_method=DELETE" style="display: inline;">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" style="background-color: #ff3232; color: white; border: none; padding: 0.5rem 1rem; cursor: pointer;">Eliminar</button>
                        </form>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

    <div style="margin-top: 2rem; text-align: center;">
        <!-- Formulario para eliminar usuarios inactivos -->
        <form method="post" action="/api/users?_method=DELETE" style="display: inline;">
            <input type="hidden" name="_method" value="DELETE">
            <button type="submit" style="background-color: #ff3232; color: white; border: none; padding: 0.8rem 1.5rem; cursor: pointer; font-size: 1.1rem;">Eliminar Usuarios Inactivos</button>
        </form>
    </div>
</div>
